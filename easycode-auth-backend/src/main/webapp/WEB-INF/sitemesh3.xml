<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>

	<!-- Map default decorator. This shall be applied to all paths if no other paths match. -->
	<mapping decorator="/decorator" />

	<!-- Exclude path from decoration. -->
	<mapping path="/css/*" exclude="true" />
	<mapping path="/errors/*" exclude="true" />
	<mapping path="/imgs/*" exclude="true" />
	<mapping path="/js/*" exclude="true" />
	
	<mapping path="/user/updatePwd" exclude="true" />

	<content-processor>
		<tag-rule-bundle class="com.easycodebox.common.sitemesh3.InnerJsTagRuleBundle" />
	</content-processor>
	
</sitemesh>